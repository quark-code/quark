{
  "name": "@quark-elements/quark",
  "version": "0.0.1",
  "description": "Monorepo of all Quark Web Component packages.",
  "private": false,
  "scripts": {
    "build": "tsc --build",
    "test": "npm run build && web-test-runner",
    "test-coverage": "npm run build && web-test-runner --coverage",
    "serve-test-coverage": "web-dev-server --app-index coverage/lcov-report/index.html --open",

    "test-theme": "web-test-runner packages/theme/test/**/*.test.js --node-resolve",
    "test-theme-coverage": "web-test-runner packages/theme/test/**/*.test.js --node-resolve --coverage",
    "build-theme-demo": "rimraf packages/theme/demo-build && rollup -c packages/theme/demo/rollup.config.js",
    "serve-theme-demo": "web-dev-server --node-resolve --app-index packages/theme/demo/index.html --open",
    "serve-theme-demo-build": "web-dev-server --node-resolve --app-index packages/theme/demo-build/index.html --open",

    "site-docs-clean": "rimraf packages/site/dest",
    "site-core-analyze": "cem analyze --config \"manifests/core/custom-elements-manifest.config.mjs\"",
    "site-material-analyze": "cem analyze --config \"manifests/material/custom-elements-manifest.config.mjs\"",
    "site-analyze": "npm run site-core-analyze && npm run site-material-analyze",
    "site-docs-build": "rollup -c ./rollup-doc.config.js",
    "site-docs-gen": "quark-doc",
    "site-docs": "npm run site-docs-clean && npm run site-analyze && npm run site-docs-build && npm run site-docs-gen",
    "site-docs-serve": "web-dev-server --root-dir=packages/site/dest --node-resolve --open",
    "site-demo-serve": "web-dev-server --root-dir=packages/site/demo --node-resolve --open"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/quark-elements/quark.git"
  },
  "author": "Paul H Mason",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/quark-elements/quark/issues"
  },
  "homepage": "https://github.com/quark-elements/quark#readme",
  "devDependencies": {
    "@quark-elements/doc": "file:packages/doc",
    "@web/dev-server": "~0.1.28",
    "@web/test-runner": "^0.13.22",
    "@open-wc/testing": "^3.0.3",
    "@web/test-runner-playwright": "^0.8.8",
    "@open-wc/building-rollup": "^2.0.1",
    "@types/chai": "^4.1.7",
    "@types/command-line-args": "^5.0.0",
    "@types/command-line-usage": "^5.0.1",
    "@types/common-tags": "^1.4.0",
    "@types/node": "^16.3.1",
    "@types/sinon": "^10.0.0",
    "@types/mocha": "^9.0.0",
    "deepmerge": "^4.2.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.2",
    "rollup-plugin-copy": "^3.4.0",
    "lit": "^2.0.2",
    "copyfiles": "^2.4.1",
    "lerna": "^4.0.0",
    "typescript": "^4.5.4",
    "prism-themes": "^1.9.0",
    "comment-parser": "^1.1.5",
    "@custom-elements-manifest/analyzer": "^0.5.7",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "^3.0.0",
    "rollup-plugin-summary": "^1.2.3",
    "rollup-plugin-terser": "^7.0.2"
  },
  "customElements": "manifests/material/custom-elements.json"
}
