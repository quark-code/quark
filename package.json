{
  "name": "@quark-elements/quark",
  "version": "0.0.1",
  "description": "Monorepo of all Quark Web Component packages.",
  "private": false,
  "scripts": {
    "test-theme": "web-test-runner packages/theme/test/**/*.test.js --node-resolve --playwright --browsers chromium firefox webkit",
    "test-theme-simple": "web-test-runner packages/theme/test/**/*.test.js --node-resolve",

    "build": "tsc --build",
    "test": "npm run build && npm run test-theme-simple",

    "serve-demo-theme": "web-dev-server --node-resolve --app-index packages/theme/demo/index.html --open",
    "test-theme-coverage": "web-test-runner packages/theme/test/**/*.test.js --node-resolve --coverage",
    "serve-theme-coverage": "web-dev-server --app-index packages/theme/coverage/lcov-report/index.html --open"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/quark-elements/quark.git"
  },
  "author": "Paul H Mason",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/quark-elements/quark/issues"
  },
  "homepage": "https://github.com/quark-elements/quark#readme",
  "devDependencies": {
    "@web/dev-server": "~0.1.28",
    "@web/test-runner": "^0.13.22",
    "@open-wc/testing": "^3.0.3",
    "@web/test-runner-playwright": "^0.8.8",
    "@open-wc/building-rollup": "^2.0.1",
    "@types/chai": "^4.1.7",
    "@types/command-line-args": "^5.0.0",
    "@types/command-line-usage": "^5.0.1",
    "@types/common-tags": "^1.4.0",
    "@types/node": "^16.3.1",
    "@types/sinon": "^10.0.0",
    "@types/mocha": "^9.0.0",
    "deepmerge": "^4.2.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.2",
    "rollup-plugin-copy": "^3.4.0",
    "lit": "^2.0.2",
    "copyfiles": "^2.4.1",
    "lerna": "^4.0.0",
    "typescript": "^4.5.4"
  }
}