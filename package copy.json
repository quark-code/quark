{
  "name": "@quark-elements/quark",
  "version": "0.0.1",
  "description": "Monorepo of all Quark Web Component packages.",
  "private": false,
  "scripts": {
    "lerna-publish": "lerna publish --message \"chore: release new versions\"",
    "lerna-docs-clean": "rimraf docs",
    "lerna-docs-material": "copyfiles -u 3 ./packages/material/docs/**/*.*  docs/material",
    "lerna-docs": "npm run lerna-docs-clean && lerna run docs && npm run lerna-docs-material"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/quark-elements/quark.git"
  },
  "author": "Paul H Mason",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/quark-elements/quark/issues"
  },
  "homepage": "https://github.com/quark-elements/quark#readme",
  "devDependencies": {
    "@web/dev-server": "~0.1.28",
    "@web/test-runner": "^0.13.22",
    "@open-wc/testing": "^3.0.3",
    "@web/test-runner-playwright": "^0.8.8",
    "@open-wc/building-rollup": "^2.0.1",
    "deepmerge": "^4.2.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.2",
    "rollup-plugin-copy": "^3.4.0",
    "lit": "^2.0.2",
    "copyfiles": "^2.4.1",
    "lerna": "^4.0.0"
  }
}