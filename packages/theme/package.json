{
  "name": "@quark-elements/theme",
  "version": "0.0.1",
  "description": "A generic theming library for web components.",
  "main": "index.js",
  "module": "index.js",
  "private": false,
  "scripts": {
    "build": "",
    "serve-demo": "npm run serve-theme-demo",
    "serve-theme-demo": "web-dev-server --node-resolve --app-index demo/index.html --open",
    "test": "npm run test-theme",
    "test-coverage": "npm run test-theme-coverage",
    "test-theme": "web-test-runner test/**/*.test.js --node-resolve --playwright --browsers chromium firefox webkit",
    "test-theme-coverage": "web-test-runner test/**/*.test.js --node-resolve --coverage --playwright --browsers chromium firefox webkit",
    "serve-coverage": "npm run serve-theme-coverage",
    "serve-theme-coverage": "web-dev-server --app-index coverage/lcov-report/index.html --open"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/quark-elements/quark.git",
    "directory": "packages/theme"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Paul H Mason",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/quark-elements/quark/issues"
  },
  "homepage": "https://github.com/quark-elements/quark#readme",
  "devDependencies": {
    "@web/dev-server": "~0.1.28",
    "@web/test-runner": "^0.13.22",
    "@open-wc/testing": "^3.0.3",
    "@web/test-runner-playwright": "^0.8.8"
  }
}
