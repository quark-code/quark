{
  "name": "@quark-elements/site",
  "version": "0.0.1",
  "description": "The documentation site for Quark.",
  "private": true,
  "scripts": {
    "core-analyze": "cem analyze --config \"manifests/core/custom-elements-manifest.config.mjs\"",
    "material-analyze": "cem analyze --config \"manifests/material/custom-elements-manifest.config.mjs\"",
    "site-analyze": "npm run core-analyze && npm run material-analyze",
    "docs": "npm run site-docs",
    "site-docs": "npm run site-docs-clean && npm run site-analyze && npm run site-docs-build && npm run site-docs-gen",
    "site-docs-clean": "rimraf dest",
    "site-docs-build": "rollup -c ./rollup.config.js",
    "site-docs-gen": "quark-doc",
    "site-docs-serve": "web-dev-server --root-dir=dest --node-resolve --open",
    "site-demo-serve": "web-dev-server --root-dir=demo --node-resolve --open"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/quark-elements/quark.git",
    "directory": "packages/site"
  },
  "author": "Paul H Mason",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/quark-elements/quark/issues"
  },
  "homepage": "https://github.com/quark-elements/quark#readme",
  "dependencies": {
    "@quark-elements/core": "^0.0.1",
    "@quark-elements/theme": "^0.0.1"
  },
  "devDependencies": {
    "@quark-elements/doc": "^0.0.1",
    "@web/dev-server": "~0.1.28",
    "@open-wc/building-rollup": "^2.0.1",
    "@custom-elements-manifest/analyzer": "^0.5.7",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "^3.0.0",
    "rollup-plugin-summary": "^1.2.3",
    "rollup-plugin-terser": "^7.0.2",
    "deepmerge": "^4.2.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.2",
    "rollup-plugin-copy": "^3.4.0",
    "prism-themes": "^1.9.0",
    "comment-parser": "^1.1.5"
  },
  "customElements": "/manifests/material/custom-elements.json"
}
